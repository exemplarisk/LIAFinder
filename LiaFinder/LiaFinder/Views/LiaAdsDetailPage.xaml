<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiaFinder.Views.LiaAdsDetailPage"
             Title="{Binding Title}">

    <Frame BackgroundColor="#344955">
    <StackLayout Spacing="20" Padding="10">
            
            <Label Text="Text:" FontSize="Large" HorizontalOptions="Center" TextColor="White"/>
            <Label Text="{Binding Text}" FontSize="Small" HorizontalOptions="Center" TextColor="White"/>
            <Label Text="Description:" FontSize="Large" HorizontalOptions="Center" TextColor="White"/>
            <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="Center" TextColor="White"/>
            <Button Text="Apply" FontSize="Large" BackgroundColor="#4A6572" HorizontalOptions="Center" Clicked="OnApplyButtonClicked"></Button>
    </StackLayout>
    </Frame>
</ContentPage>