<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LiaFinder.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="stlMainFrame" TargetType="Frame">
                <Setter Property="TranslationY"    Value="{OnPlatform iOS='-150', Android='-33'}"/>
                <Setter Property="HeightRequest"   Value="{OnPlatform iOS='120', Android='200'}"/>
                <Setter Property="HasShadow"       Value="False" />
                <Setter Property="BackgroundColor" Value="#4f4f4f" />

            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>